<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="180dp"
    android:background="#ff2a1501">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/imageView4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:alpha="0.2"
        android:background="@drawable/coffeebeans"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user@email.com"
        android:id="@+id/tvEmail"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_marginLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_alignParentRight="true"
        android:textColor="#fff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="displayName"
        android:id="@+id/tvName"
        android:layout_alignParentRight="true"

        android:layout_above="@+id/tvEmail"
        android:layout_alignLeft="@id/tvEmail"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="#fff" />

    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        app:riv_corner_radius="21dip"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:id="@+id/ivLogo"
        android:layout_above="@id/tvName"
        android:layout_alignLeft="@id/tvEmail"
        android:layout_marginBottom="20dp" />

</RelativeLayout>