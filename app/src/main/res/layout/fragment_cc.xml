<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="top|center"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Payment Info"
        android:id="@+id/textView"
        android:textSize="24sp"
        android:layout_marginBottom="32dp"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/round_cornered_view_border"
        >
        <com.devmarvel.creditcardentry.library.CreditCardForm
            android:id="@+id/credit_card_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:include_helper="false"
            app:include_zip="false"
            app:input_background="@drawable/round_cornered_view"
            />
    </FrameLayout>


    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Back to Checkout"
        android:id="@+id/btSavePayment"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/round_cornered_button_secondary"
        android:textAllCaps="false"
        android:textSize="20sp"
        fontPath = "open-sans/OpenSans-Bold.ttf"/>

</LinearLayout>