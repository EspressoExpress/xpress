<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivReceiving"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvStatus"
        android:singleLine="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivReceiving"
        android:layout_alignBottom="@+id/ivReceiving"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/basic_margin"
        android:paddingRight="@dimen/basic_margin"
        android:layout_toLeftOf="@+id/btnCompleted"
        android:layout_toStartOf="@+id/btnCompleted" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/btnCompleted"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>